DaDCMS.registerPlugin({
  icon:'<span style="font-size: 26px;margin: 0 0 0 -5px;"><i class="far fa-image"></i> <i class="fas fa-align-left"></i></span>',
   name:"{{name}}",
   id:"{{id}}",
