DaDCMS.registerPlugin({
   icon:'<i class="fas fa-download"></i>',
   name:"{{name}}",
   id:"{{id}}",
   fieldset:[{name:"downloads",type:"filemanager",settings:{multiple:true}}]
});

DaDCMS.registerPlugin({
    icon:'<i class="fas fa-envelope-open"></i>',
    name:"{{name}}",
    id:"{{id}}",
    fieldset:[
        {name:"receiver",type:"textfield"},
        {name:"redirectaftersend",type:"select",dataURL:"?m=api&f=getsites&no=1"},
        {name:"mailtemplate",type:"select",dataURL:"?m=api&f=getmaillayouts&no=1"},
        {
            name:"form", type:"formmanager",fields:[
              {type:"textfield",fieldset:[{name:"name",type:"textfield"},{name:"placeholder",type:"textfield"},{name:"required",type:"checkbox"}]},
              {type:"email",fieldset:[{name:"name",type:"textfield"},{name:"placeholder",type:"textfield"},{name:"required",type:"checkbox"}]},
              {type:"textarea",fieldset:[{name:"name",type:"textfield"},{name:"placeholder",type:"textfield"},{name:"required",type:"checkbox"}]},
              {type:"select",fieldset:[{name:"name",type:"textfield"},{name:"data", type:"databuilder"}]},
              {type:"number",fieldset:[{name:"name",type:"textfield"},{name:"placeholder",type:"textfield"},{name:"required",type:"checkbox"}]},
              {type:"checkbox",fieldset:[{name:"name",type:"textfield"},{name:"required",type:"checkbox"}]},
              {type:"registernewsletter",fieldset:[
                  {name:"name",type:"textfield"},
                  {name:"confirmmail",type:"checkbox"},
                  {name:"emailfield",type:"fieldchooser",allow:"email"},
                  {name:"receivergroup",type:"select",dataURL:"?m=api&f=getreceivergroups&no=1"}]},
              {type:"sendcopy", fieldset:[{name:"name",type:"textfield"},{name:"setinvisible",type:"checkbox"},{name:"emailfield",type:"fieldchooser",allow:"email"}]},
              {type:"captcha",fieldset:[{name:"name",type:"textfield"}]},
              {type:"submit",fieldset:[{name:"name",type:"textfield"}]}
            ]
        }
    ]
});


